<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="FragmentContactDetailBinding">
        <variable
            name="vm"
            type="com.example.contactbook.ui.viewModels.ContactViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            tools:ignore="SpUsage">

            <ImageView
                android:id="@+id/avatarIV"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@{vm.picturePath}"
                app:srcCompat="@drawable/ic_identity" />

            <include
                android:id="@+id/contactDetailColumn"
                layout="@layout/contact_detail_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatarIV"
                app:vm="@{vm}"
                />
        </RelativeLayout>

    </ScrollView>
</layout>



