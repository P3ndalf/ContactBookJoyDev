<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_main_graph"
    app:startDestination="@id/userProfileFragment">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.contactbook.screens.Main.contacts.ContactsFragment"
        android:label="Contacts" >
        <action
            android:id="@+id/action_contactsFragment_to_addContactFragment"
            app:destination="@id/addContactFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_detailContactFragment"
            app:destination="@id/detailContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.contactbook.screens.Main.SettingsFragment"
        android:label="Settings" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.contactbook.screens.Main.UserProfileFragment"
        android:label="User Profile" />
    <fragment
        android:id="@+id/addContactFragment"
        android:name="com.example.contactbook.screens.Main.contacts.AddContactFragment"
        android:label="AddContactFragment" >
        <action
            android:id="@+id/action_addContactFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/editContactFragment"
        android:name="com.example.contactbook.screens.Main.contacts.EditContactFragment"
        android:label="EditContactFragment" >
        <action
            android:id="@+id/action_editContactFragment_to_detailContactFragment"
            app:destination="@id/detailContactFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailContactFragment"
        android:name="com.example.contactbook.screens.Main.contacts.DetailContactFragment"
        android:label="DetailContactFragment" >
        <action
            android:id="@+id/action_detailContactFragment_to_contactsFragment"
            app:destination="@id/contactsFragment" />
        <action
            android:id="@+id/action_detailContactFragment_to_editContactFragment"
            app:destination="@id/editContactFragment" />
    </fragment>
</navigation>